<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:padding="15dip" >


    <!--TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView_location" /-->


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:gravity="right"
        android:rowCount="10"
        android:columnCount="4"
        android:verticalSpacing="@dimen/grid_vertical_spacing"
        android:horizontalSpacing="@dimen/grid_vertical_spacing"
        android:id="@+id/gridview_athan">



        <TextView
            android:id="@+id/athan_timing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large"
            android:layout_row="0"
            android:layout_column="0"/>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_row="0"
            android:layout_column="1"
            android:checked="true"/>

        <TextView
            android:id="@+id/athan_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/prayer1"
            android:layout_row="0"
            android:layout_column="2"/>

        <TextView
            android:id="@+id/sunrise_timing1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/sunrise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sunrise"
            android:gravity="right"
            android:layout_row="1"
            android:layout_column="2"/>


        <TextView
            android:id="@+id/athan_timing2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_row="2"
            android:layout_column="0"/>

        <Switch
            android:id="@+id/switch2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_row="2"
            android:layout_column="1"
            android:checked="true"/>

        <TextView
            android:id="@+id/athan_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/prayer2"
            android:gravity="right"
            android:layout_row="2"
            android:layout_column="2"/>


        <TextView
            android:id="@+id/athan_timing3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_row="3"
            android:layout_column="0"/>

        <Switch
            android:id="@+id/switch3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_row="3"
            android:layout_column="1"
            android:checked="true"/>

        <TextView
            android:id="@+id/athan_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/prayer3"
            android:gravity="right"
            android:layout_row="3"
            android:layout_column="2"/>

        <TextView
            android:id="@+id/sunset_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_row="4"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/sunset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/sunset"
            android:gravity="right"
            android:layout_row="4"
            android:layout_column="2"/>


        <TextView
            android:id="@+id/athan_timing4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:gravity="right"
            android:layout_row="5"
            android:layout_column="0"/>

        <Switch
            android:id="@+id/switch4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_row="5"
            android:layout_column="1"
            android:checked="true"/>

        <TextView
            android:id="@+id/athan_name4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/prayer4"
            android:gravity="right"
            android:layout_row="5"
            android:layout_column="2"/>



        <TextView
            android:id="@+id/athan_timing5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_row="6"
            android:layout_column="0"/>

        <Switch
            android:id="@+id/switch5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_row="6"
            android:layout_column="1"
            android:checked="true"/>

        <TextView
            android:id="@+id/athan_name5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/prayer5"
            android:gravity="right"
            android:layout_row="6"
            android:layout_column="2"/>

    </GridLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridview_athan"

        android:padding="15dip" >
        <TextView
            android:id="@+id/adjustment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/time_adjustment"
            android:gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/adjustment_text"
            android:layoutDirection="ltr"
            android:layout_centerHorizontal="true">
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/adjuster_sign" />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hourPicker" />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minutePicker" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>