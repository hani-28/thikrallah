<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.HMSolutions.thikrallah.MainActivity$PlaceholderFragment" >


    <Button
        android:id="@+id/button_remind_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_morning_thikr"
        android:layout_alignBottom="@+id/button_morning_thikr"
        android:layout_centerHorizontal="true"
        android:text="@string/Settings"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_night_thikr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_remind_me"
        android:layout_alignBottom="@+id/button_remind_me"
        android:layout_toLeftOf="@+id/button_remind_me"
        android:text="@string/nightThikr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_morning_thikr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/button_remind_me"
        android:text="@string/morningThikr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button_support_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_remind_me"
        android:layout_alignRight="@+id/button_remind_me"
        android:layout_toRightOf="@+id/button_night_thikr"
        android:text="@string/support_us" />

</RelativeLayout>
